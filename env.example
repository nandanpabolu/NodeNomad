# NodeNomad Configuration
# Copy this file to .env and modify as needed

# Node Configuration
NODE_ID=node-1
NODE_PORT=3000
NODE_HOST=0.0.0.0

# Cluster Configuration
CLUSTER_NODES=node-1:3001,node-2:3002,node-3:3003

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Data Storage
DATA_DIR=./data

# Raft Configuration
HEARTBEAT_INTERVAL=150
ELECTION_TIMEOUT=300
MAX_LOG_SIZE=1000

# Sharding Configuration
SHARD_COUNT=8
VIRTUAL_NODES_PER_SHARD=100
REPLICATION_FACTOR=3

# API Configuration
ALLOWED_ORIGINS=*

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Migration Configuration
MIGRATION_BATCH_SIZE=1000
MIGRATION_TIMEOUT=30000

# Performance Tuning
MAX_CONCURRENT_OPERATIONS=100
CACHE_SIZE=10000
CACHE_TTL=300000
